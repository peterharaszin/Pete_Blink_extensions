{

  "name": "Google Search Languages",
  "description": "Show available languages on the Google search site next to the search text field.",
  "version": "1.0.3",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    { 
      "matches": ["https://www.google.hu/search*", "https://www.google.com/search*", "https://www.google.hu/*", "https://www.google.com/*", "https://www.google.com/webhp*"],
      "css" : ["css/google_search_languages.css"],
      "js" : ["js/content_script.js"],
      "run_at" : "document_start"
   }
  ],
  "icons": {
    "16": "images/search16.png",
    "32": "images/search32.png",
    "48": "images/search48.png",
    "128": "images/search128.png"
  },  
  "manifest_version": 2
}
